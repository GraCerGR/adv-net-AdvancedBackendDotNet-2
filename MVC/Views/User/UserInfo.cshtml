@{
    ViewData["Title"] = "UserInfo";
}

<body>
    <h2>UserInfo</h2>

    @model MVC.Models.UserDto
    @using (Html.BeginForm("UserInfo", "User"))
    {

        <div>
            <p><strong>Имя:</strong> @Model.Name</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Дата рождения:</strong> @Model.Birthdate</p>
            <p><strong>Пол:</strong> @Model.Gender</p>
            <p><strong>Гражданство:</strong> @Model.Citizenship</p>
            <p><strong>Номер телефона:</strong> @Model.PhoneNumber</p>
        </div>
        <a href="@Url.Action("EditUserInfo", "User")" class="btn btn-primary">Изменить данные</a>
        <a href="@Url.Action("EditUserPaasword", "User")" class="btn btn-primary">Изменить пароль</a>
    }
</body>

